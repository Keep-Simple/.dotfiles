#!/bin/sh

# Show wifi ğŸ“¶ and percent strength or ğŸ“¡ if none.
# Show ğŸŒ if connected to ethernet or â if none.
# Show ğŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e connman-gtk; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ğŸŒ Internet module" "\- Click to connect
ğŸ“¡: no wifi connection
ğŸ“¶: wifi connection with quality
â: no ethernet
ğŸŒ: ethernet working
ğŸ”’: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

WIFI_STATUS="$(cat /sys/class/net/w*/operstate 2>/dev/null)" 
ETHERNET_STATUS="$(cat /sys/class/net/e*/operstate 2>/dev/null)" 
VPN_STATUS="$(cat /sys/class/net/tun*/operstate 2>/dev/null)" 

case $ETHERNET_STATUS in
	up) icon="ğŸŒ " ;;
esac

case $WIFI_STATUS in
	up) icon="ğŸ“¶ " ;;
esac

[ -z "$icon" ] && icon="ğŸ“¡ "


printf "%s%s\n" "$icon" "$(sed "s/.*/ğŸ”’/" $VPN_STATUS)"
