# vim:ft=sh

source "~/.config/lf/commands/paste"
source "~/.config/lf/commands/bulk-rename"
source "~/.config/lf/commands/shortcutrc"
source "~/.config/lf/commands/fzf"
source "~/.config/lf/commands/trash"
source "~/.config/lf/commands/open"
source "~/.config/lf/commands/files_and_dirs"
source "~/.config/lf/commands/archives"

set shell sh
# set shellopts '-ey' # for zsh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set icons
set hidden true
set period 1
set hiddenfiles ".*:*.aux:*.log:*.bbl:*.bcf:*.blg:*.run.xml"
set previewer ~/.config/lf/preview

# change columns size dependant on the available space
${{
    w=$(tput cols)
    if [ $w -le 100 ]; then
        lf -remote "send $id set ratios 2:2:3"
    elif [ $w -le 160 ]; then
        lf -remote "send $id set ratios 1:2:3"
    fi
}}


map gh
map d
map y
map ,
map yy copy
map yn copy-filename
map yP copy-absolute-path
map dd cut
map \\ find-prev
map U fzf-restore
map X push !$f<space>
map x !$f
map gg top
map gd :delete
map gc $code $fx
map gl follow_link
map D :trash
map t toggle
map A push :mkdir<space>
map a push :touch<space>
map <c-r> reload
map <c-a> :select-files
map <enter> shell
map o $open $f
map <c-z> $kill -STOP $PPID
map p paste_try_cow
map ,r bulk-rename
map ,st :fzf_search
map ,sh :share
map ,ch :chmod
map ,f :fzf_jump
map ,t push :tar<space>
map ,z push :zip<space>
map ,e :extract
map ,Sl $lvim +"lua require('persistence').load({ last = true })"
