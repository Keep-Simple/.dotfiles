# apps shortcuts
ctrl + alt + cmd - return : open -n /Applications/Alacritty.app
ctrl + alt + cmd + shift - return : $YABAI/quick_terminal.sh
ctrl + alt + cmd - s : open -n /System/Applications/System\ Preferences.app
ctrl + alt + cmd - b : open -n /Applications/Brave\ Browser.app

# change layouts
ctrl + alt + cmd - t : yabai -m space --layout bsp; $YABAI/smart_gaps.sh
ctrl + alt + cmd - u : yabai -m space --layout stack; $YABAI/smart_gaps.sh

# focus window
ctrl + alt + cmd - x : yabai -m window --focus recent
ctrl + alt + cmd - h : yabai -m window --focus west || yabai -m window --focus stack.prev || yabai -m window --focus stack.next
ctrl + alt + cmd - j : yabai -m window --focus south 
ctrl + alt + cmd - k : yabai -m window --focus north
ctrl + alt + cmd - l : yabai -m window --focus east || yabai -m window --focus stack.next || yabai -m window --focus stack.prev

# swap window
ctrl + alt + cmd + shift - x : yabai -m window --warp recent
ctrl + alt + cmd + shift - h : yabai -m window --warp west
ctrl + alt + cmd + shift - j : yabai -m window --warp south
ctrl + alt + cmd + shift - k : yabai -m window --warp north
ctrl + alt + cmd + shift - l : yabai -m window --warp east

# resize window
ctrl + alt + cmd - left : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
ctrl + alt + cmd - down : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
ctrl + alt + cmd - up : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
ctrl + alt + cmd - right : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# fast focus previous and next desktop
ctrl + alt + cmd - g : yabai -m space --focus prev || yabai -m space --focus last
# maps to ;
ctrl + alt + cmd - 0x29 : yabai -m space --focus next || yabai -m space --focus first
ctrl + alt + cmd - 0 : yabai -m space --focus recent
#toggle gaps
ctrl + alt + cmd + shift - a : yabai -m space --toggle padding && yabai -m space --toggle gap
# toggle sticky (show on all spaces)
ctrl + alt + cmd + shift - s : yabai -m window --toggle sticky --toggle topmost
# toggle topmost (keep above other windows)
ctrl + alt + cmd + shift - o : yabai -m window --toggle topmost
## Close active application
ctrl + alt + cmd - q : yabai -m window --close
# toggle window zoom
ctrl + alt + cmd - f : yabai -m window --toggle zoom-fullscreen 
# toggle window native fullscreen
ctrl + alt + cmd + shift - f : yabai -m window --toggle native-fullscreen
# float / unfloat window 
ctrl + alt + cmd + shift - space : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2
# Restart Yabai
ctrl + alt + cmd - r : $YABAI/restart.sh
# fast focus desktop
ctrl + alt + cmd - 1 : yabai -m space --focus 1
ctrl + alt + cmd - 2 : yabai -m space --focus 2
ctrl + alt + cmd - 3 : yabai -m space --focus 3
ctrl + alt + cmd - 4 : yabai -m space --focus 4
ctrl + alt + cmd - 5 : yabai -m space --focus 5
ctrl + alt + cmd - 6 : yabai -m space --focus 6
ctrl + alt + cmd - 7 : yabai -m space --focus 7
ctrl + alt + cmd - 8 : yabai -m space --focus 8
ctrl + alt + cmd - 9 : yabai -m space --focus 9

