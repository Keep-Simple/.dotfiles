set page-padding 1
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top


set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 80

set zoom-min 10
set guioptions "sc"
