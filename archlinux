#!/usr/bin/env zsh

if [[ -z $STOW_FOLDERS ]]; then
    STOW_FOLDERS="
    nvim,zsh,x11,
    shell,picom,lf,
    fontconfig,git,
    dunst,suckless,
    bin,lvim,wallpapers,
    zathura,pipewire,
    runit,packup"
fi

if [[ -z $DOTFILES ]]; then
    DOTFILES=$HOME/.dotfiles
fi

STOW_FOLDERS=$STOW_FOLDERS DOTFILES=$DOTFILES $DOTFILES/install
